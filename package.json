{
  "name": "firebase-functions-nuxt-example",
  "version": "1.0.0",
  "description": "Host Nuxt.js SSR app on Firebase Cloud Functions with Firebase Hosting redirects.",
  "license": "MIT",
  "author": "David Royer",
  "repository": "",
  "dependencies": {},
  "scripts": {
    "setup": "yarn build:all",
    "fireserve": "firebase serve --only functions,hosting",
    "dev": "cd \"src\" && yarn nuxt",
    "build-client": "cd \"src\" && yarn nuxt build && yarn copyassets",
    "build-server": "cd \"prod/server\" && yarn",
    "build-all": "yarn build:client && yarn build:server",
    "start": "cd \"src\" && yarn nuxt start",
    "generate": "cd \"src\" && yarn nuxt generate",
    "prepare-deploy": "yarn build-client && firebase deploy",
    "deploy": "firebase deploy",
    "assets": "cd \"src\" && yarn copyassets"
  }
}
